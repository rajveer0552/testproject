<p><%= notice %></p>
<h1>  Articles details </h1>
<%= link_to'New Article', new_article_path %>
<table>
	<thead>
		<tr>
			<th> Name </th>
			<th> Last Name </th>
			<th> Mobile Number </th>
			<th> Adhar Number </th>
			<th> Blood Number </th>
			<th colspan="3"> Actions </th>
		</tr>
	</thead>
<tbody> <% @articles.each do |article| %>
<tr>
	<th> <%= article.name %></th>
	<th> <%=article.last_name %> </th>
	<th> <%=article.mobile_number%> </th> 
	<th> <%=article.adhar_number%> </th> 
	<th> <%=article.blood_group%> </th> 
	<th> <%= link_to 'View', article %> </th>
	<th> <%= link_to 'Edit', edit_article_path(article) %> </th>
	<th> <%= link_to 'Destroy', article, data:{ turbo_method: :delete,turbo_confirm:'are you sure'} %> </th>
</tr>
<% end %>
</tbody>
</table>